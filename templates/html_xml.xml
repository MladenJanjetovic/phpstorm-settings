<templateSet group="html/xml">
  <template name="if" value="&lt;?php if($END$): ?&gt;&#10;    &#10;&lt;?php endif ?&gt;" description="Add PHP IF in html" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="foreach" value="&lt;?php foreach($END$ as $key =&gt; $value): ?&gt;&#10;    &#10;&lt;?php endforeach ?&gt;" description="Add PHP foreach()" toReformat="false" toShortenFQNames="true">
