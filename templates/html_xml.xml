      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="php" value="&lt;?php $END$ ?&gt;" description="Add PHP block" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="echo" value="&lt;?php echo $END$; ?&gt;" description="php into code" toReformat="false" toShortenFQNames="true">
